@{
    Layout = null;
}

<script type="text/ng-template" id="vintage-reports.html">
    <div class="reports">
        <div class="body-content">
            <div class="pt-1 pb-2">
                <div class="pull-left"><a class="n-back" ng-href="{{$ctrl.initialData.backofficeUrl}}"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
                <h1 class="adjusted">Vintage reports</h1>
            </div>

            <div class="row">
                <div class="col-sm-offset-2 col-xs-8">
                    <div class="data-bg" ng-if="$ctrl.m">
                        <form name="f">
                            <div class="row pb-2">
                                <div class="col-sm-4">
                                    <label>Balance</label>
                                    <select class="form-control" ng-model="$ctrl.m.balanceOption">
                                        <option value="0+">0+</option>
                                        <option value="30+">30+</option>
                                        <option value="60+">60+</option>
                                        <option value="90+">90+</option>
                                        <option value="30">30</option>
                                        <option value="60">60</option>
                                        <option value="90">90</option>
                                        <option value="exclude">Exclude</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row pb-2">
                                <div class="col-sm-4">
                                    <label>Debt collection balance</label>
                                    <select class="form-control" ng-model="$ctrl.m.debtCollectionOption">
                                        <option value="0">0</option>
                                        <option value="0+">0+</option>
                                        <option value="exclude">Exclude</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row pb-2">
                                <div class="col-sm-4">
                                    <label>Values</label>
                                    <select class="form-control" ng-model="$ctrl.m.valueType">
                                        <option value="balance">Balance</option>
                                        <option value="count">Count</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row pb-2">
                                <div class="col-sm-4">
                                    <label>Provider</label>
                                    <select class="form-control" ng-model="$ctrl.m.providerName">
                                        <option value="">Any</option>
                                        <option ng-repeat="p in $ctrl.m.allProviders" value="{{p.ProviderName}}">{{p.ProviderName}}</option>
                                    </select>
                                </div>
                                <div class="col-sm-4">
                                    <label>Risk group</label>
                                    <select class="form-control" ng-model="$ctrl.m.riskGroup">
                                        <option value="">Any</option>
                                        <option ng-repeat="r in $ctrl.m.allRiskGroups" value="{{r.RiskGroup}}">{{r.RiskGroup}}</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row pb-2">
                                <div class="col-sm-4">
                                    <label>Y Axis from</label>
                                    <select class="form-control" ng-model="$ctrl.m.yAxisFrom">
                                        <option value="">Any</option>
                                        <option ng-repeat="v in $ctrl.m.allVintageMonths" value="{{v | date:'yyyy-MM'}}">{{v | date:'yyyy-MM'}}</option>
                                    </select>
                                </div>
                                <div class="col-sm-4">
                                    <label>Y Axis to</label>
                                    <select class="form-control" ng-model="$ctrl.m.yAxisTo">
                                        <option value="">Any</option>
                                        <option ng-repeat="v in $ctrl.m.allVintageMonths" value="{{v | date:'yyyy-MM'}}">{{v | date:'yyyy-MM'}}</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row pb-2">
                                <div class="col-sm-4">
                                    <label>Format</label>
                                    <select class="form-control" ng-model="$ctrl.m.formatType">
                                        <option value="percent">Percent</option>
                                        <option value="value">Values</option>
                                    </select>
                                </div>
                            </div>
                        </form>

                        <div ng-if="$ctrl.m">
                            <a ng-href="{{$ctrl.getUrl($ctrl.m.request)}}" class="n-direct-btn n-green-btn" target="_blank">Show monitor <span class="glyphicon glyphicon-new-window"></span></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
       

        
    </div>
</script>