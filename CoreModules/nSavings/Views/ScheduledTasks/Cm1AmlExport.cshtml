@using NWebsec.Mvc.HttpHeaders.Csp
@{
    Layout = "~/Views/ScheduledTasks/_ScheduledTaskLayout.cshtml";
    ViewBag.Title = "Savings - Cm1 AML Export";
    ViewBag.AngularDeclaration = "ng-app=\"app\" ng-controller=\"ctr\" ng-cloak";
    ViewBag.LoaderDeclaration = "ng-show=\"isLoading\"";
}

@section Scripts {
    <script @Html.CspScriptNonce()>
        var initialData = JSON.parse(atob('@Html.Raw(ViewBag.JsonInitialData)'))
    </script>
    @Scripts.Render("~/Content/js/bundle-scheduledtasks-Cm1amlexport")
}

@section PageHeader {
    <div class="pt-1 pb-2">
        <div class="pull-left"><a class="n-back" href="@(new Uri(NEnv.ServiceRegistry.External["nBackoffice"]).ToString())"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
        <h1 class="adjusted">Cm1 AML Export</h1>
    </div>
}

@section CurrentTask {
    @Html.Partial("HideShowExecuteButton", new { text = "Trigger job manually" })
    <div class="row pb-2" ng-show="showExecuteButton">
        <div class="frame col-sm-8 col-sm-offset-2">
            <div class="text-center pt-3">
                <button class="n-main-btn n-green-btn" ng-click="createFile($event)">
                    <span ng-show="exportProfileName">Create file and deliver it to '{{exportProfileName}}'</span>
                    <span ng-hide="exportProfileName">Create file but don't deliver it</span>
                </button>
            </div>
        </div>
    </div>
    <div class="pt-3 text-center no-hits" ng-show="files && files.TotalNrOfPages == 0"><p>No exports have been done.</p></div>
    <div class="row" ng-if="files">
        <form name="dateftsform" novalidate>
            <div class="col-xs-2">
                <div class="form-group" ng-class="{ 'has-error' : dateftsform.fromDate.$invalid }">
                    <label class="control-label">From date</label>
                    <input type="text" ng-model="dateSearch.fromDate" name="fromDate" custom-validate="isValidDate" class="form-control" placeholder="YYYY-MM-DD">
                </div>
            </div>
            <div class="col-xs-2">
                <div class="form-group" ng-class="{ 'has-error' : dateftsform.toDate.$invalid }">
                    <label class="control-label">To date</label>
                    <input type="text" ng-model="dateSearch.toDate" name="toDate" custom-validate="isValidDate" class="form-control" placeholder="YYYY-MM-DD">
                </div>
            </div>
            <div class="col-xs-8">
                <div class="form-group">
                    <label class="control-label col-xs-12">&nbsp;</label>
                    <button class="n-main-btn n-blue-btn" ng-disabled="dateftsform.$invalid" ng-click="dateSearch.search($event)">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div class="pt-3" ng-show="files && files.TotalNrOfPages > 0">
        <table class="table">
            <thead>
                <tr>
                    <th class="">Date</th>
                    <th class="text-left">Status</th>
                    <th class="text-left">Delivered to</th>
                    <th class="text-right">Download file</th>
                    <th class="text-right">By</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="f in files.Page">
                    <td class="">{{f.TransactionDate | date:'shortDate'}}</td>
                    <td class="text-left">
                        <span class="glyphicon" ng-class="{ 'glyphicon-exclamation-sign' : f.ExportResultStatus.status == 'Warning', 'glyphicon-ok' : f.ExportResultStatus.status == 'Success',  'glyphicon-remove' : f.ExportResultStatus.status == 'Error' }"></span>
                        <span ng-show="f.ExportResultStatus.warnings && f.ExportResultStatus.warnings.length > 0">({{f.ExportResultStatus.warnings[0]}})</span>
                        <span ng-show="f.ExportResultStatus.errors && f.ExportResultStatus.errors.length > 0">({{f.ExportResultStatus.errors[0]}})</span>
                    </td>
                    <td class="text-left">
                        <span ng-show="f.ExportResultStatus.deliveredToProfileName">{{f.ExportResultStatus.deliveredToProfileName}}</span>
                        <span ng-hide="f.ExportResultStatus.deliveredToProfileName">Not delivered</span>
                    </td>
                    <td class="text-right"><a class="n-direct-btn n-purple-btn" ng-show="f.ArchiveDocumentUrl" target="_blank" ng-href="{{f.ArchiveDocumentUrl}}">File <span class="glyphicon glyphicon-save"></span></a></td>
                    <td class="text-right">{{f.UserDisplayName}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div ng-show="files && files.TotalNrOfPages > 1">
        <div class="dataTables_paginate paging_simple_numbers custom-pagination">
            <ul class="pagination">
                <li class="paginate_button previous" ng-show="filesPaging.isPreviousAllowed"><a href="#" ng-click="gotoPage(filesPaging.previousPageNr, $event)">Previous</a></li>
                <li class="paginate_button previous disabled" ng-hide="filesPaging.isPreviousAllowed"><a href="#" ng-click="$event.preventDefault()">Previous</a></li>

                <li ng-repeat="p in filesPaging.pages" class="paginate_button" ng-class="{ 'active' : p.isCurrentPage, 'disabled' : p.isSeparator }">
                    <a href="#" ng-click="gotoPage(p.pageNr, $event)" ng-hide="p.isSeparator">{{p.pageNr+1}}</a>
                    <a href="#" ng-show="p.isSeparator" ng-click="$event.preventDefault()">...</a>
                </li>

                <li class="paginate_button next" ng-show="filesPaging.isNextAllowed"><a href="#" ng-click="gotoPage(filesPaging.nextPageNr, $event)">Next</a></li>
                <li class="paginate_button next disabled" ng-hide="filesPaging.isNextAllowed"><a href="#" ng-click="$event.preventDefault()">Next</a></li>
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>
}