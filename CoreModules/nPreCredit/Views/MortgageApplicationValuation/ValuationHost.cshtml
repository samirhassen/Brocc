@using NWebsec.Mvc.HttpHeaders.Csp
@{
    ViewBag.Title = "Mortage Application Valuation";
    ViewBag.AngularDeclaration = "ng-app=\"app\" ng-controller=\"mortgageApplicationValuationHostCtr as c\" ng-cloak";
    ViewBag.LoaderDeclaration = "ng-show=\"c.isLoading\"";
}

@section Scripts {
    <script @Html.CspScriptNonce()>
        var initialData = JSON.parse(atob('@Html.Raw(ViewBag.JsonInitialData)'))
