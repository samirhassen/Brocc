    @Scripts.Render("~/Content/js/bundle-mortgage-valuation-host")
}

<div>
    <div class="pt-1 pb-3">
        <div class="pull-left"><a class="n-back" href="@(new Uri(NEnv.ServiceRegistry.External["nBackoffice"]).ToString())"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
        <h1 class="adjusted">Valuation</h1>
    </div>
    <mortgage-application-object-valuation-new initial-data="c.newInitialData"></mortgage-application-object-valuation-new>
</div>

@Html.Partial("Components")