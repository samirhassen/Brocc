@{
    Layout = null;
}

<script type="text/ng-template" id="company-loan-initial-credit-check-view.html">
    <div>

    <div class="pt-1 pb-2">
        <div class="pull-left"><a class="n-back" ng-click="$ctrl.onBack($event)" href="#"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
        <h1 class="adjusted" ng-class="$ctrl.headerClassFromStatus($ctrl.m.d.WasAccepted)">Credit decision <span ng-class="$ctrl.iconClassFromStatus($ctrl.m.d.WasAccepted)" style="font-size:20px; margin-left: 5px;"></span></h1>
    </div>

    <div class="row pb-3">
        <div class="col-md-8 col-md-offset-2">
            <form class="form-horizontal" novalidate ng-if="$ctrl.m.d.WasAccepted">
                <div class="row" ng-if="$ctrl.m.d.CompanyLoanOffer">
                    <div class="col-sm-6 col-md-6">
                        <div class="form-group">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">New Loan Amount</label>
                            <div class="col-xs-6 col-sm-6 col-md-6"><p class="form-control-static">{{$ctrl.m.d.CompanyLoanOffer.LoanAmount | currency}}</p></div>
                        </div>
                        <div class="form-group">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">Repayment time</label>
                            <div class="col-xs-6 col-sm-6 col-md-6"><p class="form-control-static">{{$ctrl.m.d.CompanyLoanOffer.RepaymentTimeInMonths}} months</p></div>
                        </div>
                        <div class="form-group" ng-if="$ctrl.m.d.CompanyLoanOffer.MonthlyFeeAmount">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">Notification fee</label>
                            <div class="col-xs-6 col-sm-6 col-md-6"><p class="form-control-static">{{$ctrl.m.d.CompanyLoanOffer.MonthlyFeeAmount | currency}}</p></div>
                        </div>                    
                        <div class="form-group" ng-if="$ctrl.m.d.CompanyLoanOffer.InitialFeeAmount">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">Initial fee</label>
                            <div class="col-xs-6 col-sm-6 col-md-6"><p class="form-control-static">{{$ctrl.m.d.CompanyLoanOffer.InitialFeeAmount | currency}}</p></div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6">
                        <div class="form-group">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">Margin interest rate</label>
                            <div class="col-xs-6 col-sm-6 col-md-6"><p class="form-control-static">{{$ctrl.m.d.CompanyLoanOffer.NominalInterestRatePercent | number:'2'}} %</p></div>
                        </div>
                        <div class="form-group">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">Reference interest rate</label>
                            <div class="col-xs-6 col-sm-6 col-md-6"><p class="form-control-static">{{$ctrl.m.d.CompanyLoanOffer.ReferenceInterestRatePercent | number:'2'}} %</p></div>
                        </div>
                    </div>
                </div>
            </form>

            <form class="form-horizontal" name="rejectform" novalidate ng-show="!$ctrl.m.d.WasAccepted">
                <div class="form-group">
                    <label class="col-xs-6 col-sm-6 col-md-6 control-label">Rejection reasons</label>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <p class="form-control-static" ng-repeat="r in $ctrl.m.d.RejectionReasons">
                            <b>{{$ctrl.getDisplayRejectionReason(r)}}&nbsp</b>
                        </p>
                    </div>
                </div>
                @*<div class="row" ng-show="$ctrl.m.maxPauseItem">
                    <div class="col-sm-offset-2 col-sm-8">
                        <hr class="hr-section dotted">
                        <div class="form-group">
                            <label class="col-xs-6 col-sm-6 col-md-6 control-label">
                                Pause
                            </label>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <p class="form-control-static">
                                    <b>{{maxPauseItem.nrOfDays}} days due to {{getDisplayRejectionReasons(maxPauseItem.rejectionReasonNames).join(', ')}} until {{maxPauseItem.pausedUntilDate | date}}</b>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>*@
            </form>
        </div>
    </div>

    <company-loan-initial-credit-check-recommendation initial-data="$ctrl.m.recommendationInitialData"></company-loan-initial-credit-check-recommendation>

    </div>
</script>