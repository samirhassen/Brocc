@{
    Layout = null;
}

<script type="text/ng-template" id="application-status-block.html">
    <div class="block">
        <div class="row" ng-class="$ctrl.headerClassFromStatus($ctrl.initialData.status, $ctrl.initialData.isActive)">
            <div class="col-xs-1"><span ng-class="$ctrl.iconClassFromStatus($ctrl.initialData.status)" class="custom-glyph ntech-status-icon"></span></div>
            <div class="col-xs-9">
                <h2 class="custom-header">{{$ctrl.initialData.title}}</h2>
            </div>
            <div class="col-xs-2 text-right">
                <span ng-class="{ 'glyphicon glyphicon-chevron-down chevron-bg' : $ctrl.isExpanded, 'glyphicon glyphicon-chevron-right chevron-bg' : !$ctrl.isExpanded  }" ng-click="$ctrl.toggleExpanded($event)"></span>
            </div>
        </div>
        <div ng-if="$ctrl.isExpanded" style="padding-bottom: 70px; border-top:1px solid #000000; margin-top: 3px;" class="pt-2">
            <div ng-transclude></div>
        </div>
    </div>
</script>
