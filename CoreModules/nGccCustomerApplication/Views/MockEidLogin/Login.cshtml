@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Testinloggning med BankID</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <link rel="icon" type="image/png" href="~/Content/img/favicon.png" />
    <link rel="icon" href="~/Content/img/favicon-32.png" sizes="32x32" />
    <link rel="icon" href="~/Content/img/favicon-48.png" sizes="48x48" />
    <link rel="icon" href="~/Content/img/favicon-64.png" sizes="64x64" />
    <link rel="apple-touch-icon" href="~/Content/img/favicon-touch.png" />

    @Styles.Render("~/Content/css/bundle-base")
    @Styles.Render("~/Content/css/bundle-magellan-customerapplication")

</head>
<body>
    <div class="wrapper">
        <div class="body-content">
            <div style="display: flex; justify-content: center; align-content: center; flex-direction: column; align-items: center ">
                <img src="~/Content/img/BankID_logo.svg" style="max-height:125px" />
                <p>Välj hur du vill logga in</p>
                <form action="@Url.Action("Authenticate", "MockEidLogin")" method="post">
                    <input type="hidden" name="sessionId" value="@Html.Raw(ViewBag.SessionId)" />
                    <button class="btn btn-default" type="submit">
                        BankID på mobil<span style="padding-left:10px" class="glyphicon glyphicon-arrow-right"></span>
                    </button>
                </form>
                <p style="font-size:smaller;opacity:0.5;padding-top:20px">(Obs! Endast test, ingen faktisk inloggning görs.)</p>
             </div>            
        </div>        
    </div>
</body>
</html>