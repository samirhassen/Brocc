@using NWebsec.Mvc.HttpHeaders.Csp
@{
    ViewBag.Title = "Credit - Change terms management";
    ViewBag.AngularDeclaration = "ng-app=\"app\" ng-controller=\"changeTermsManagementCtrl as c\" ng-cloak";
    ViewBag.LoaderDeclaration = "ng-show=\"isLoading\"";
}

@section Scripts {
    <script @Html.CspScriptNonce()>
        var initialData = JSON.parse(atob('@Html.Raw(ViewBag.JsonInitialData)'))
    </script>
    @Scripts.Render("~/Content/js/bundle-changetermsmanagement-index")
}

<div class="pt-1 pb-2">
    <div class="pull-left"><a class="n-back" href="#" ng-click="c.onBack($event)"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
    <h1 class="adjusted">Pending change terms</h1>
</div>

<p ng-show="c.creditsWithPendingTermChanges.length === 0">
    There are no pending term changes
</p>

<div class="row">
    <div class="col-xs-8 col-sm-offset-2">
        <table class="table" ng-hide="c.creditsWithPendingTermChanges.length === 0">
            <thead>
                <tr><th>Loan nr</th></tr>
            </thead>
            <tbody>
                <tr ng-repeat="n in c.creditsWithPendingTermChanges">
                    <td><a target="_blank" class="n-anchor" ng-href="{{n.link}}">{{n.creditNr}} <span class="glyphicon glyphicon-new-window"></span></a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>