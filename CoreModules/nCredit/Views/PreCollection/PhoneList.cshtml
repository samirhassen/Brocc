@using NWebsec.Mvc.HttpHeaders.Csp
@{
    ViewBag.Title = "Credit - PreCollection - PhoneList";
    ViewBag.AngularDeclaration = "ng-app=\"app\" ng-controller=\"phoneListCtrl as c\" ng-cloak";
    ViewBag.LoaderDeclaration = "ng-show=\"c.isLoading\"";
}

@section Scripts {
    <script @Html.CspScriptNonce()>
          var initialData = JSON.parse(atob('@Html.Raw(ViewBag.JsonInitialData)'))
    </script>
    @Scripts.Render("~/Content/js/bundle-precollection-phonelist")
}
<div class="pt-1 pb-2">
    <div class="pull-left"><a class="n-back" href="#" ng-click="c.onBack($event)"><span class="glyphicon glyphicon-arrow-left"></span></a></div>
    <h1 class="adjusted">Precollection</h1>
</div>

<div class="row">
    <div class="col-xs-2">
        <div class="custom-submenu">
            <ul class="nav nav-pills nav-stacked">
                <li><a ng-href="{{c.workListUrl}}">Worklist</a></li>
                <li class="active"><a href="#">Phonenumberlist</a></li>
            </ul>
        </div>
    </div>
    <div class="col-xs-10">
        <!--Calculate worklist-->
        <div class="row">
            <div class="col-xs-8 col-sm-offset-2">
                <div class="editblock">
                    <div class="row">
                        <div class="col-xs-6">
                            <label>Overdue count</label>
                            <select ng-model="c.overdueCount" class="form-control">
                                <option value="">All</option>
                                <option value="1">KK1</option>
                                <option value="2">KK2</option>
                                <option value="3">KK3</option>
                                <option value="4+">KK4+</option>
                            </select>
                        </div>
                    </div>
                    <div class="pt-2">
                        <button class="n-direct-btn n-purple-btn" ng-click="c.downloadPhoneList($event)">Download <span class="glyphicon glyphicon-save"></span></button>
                    </div>
                </div>
            </div>
        </div>
        <!--end calculate worklist-->
    </div>
</div>